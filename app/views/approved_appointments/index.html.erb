<h1>Listing approved_appointments</h1>

<table>
  <thead>
    <tr>
      <th>Lecturer</th>
      <th>Student</th>
      <th>Appointment time</th>
      <th>Appointment date</th>
      <th>Note</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @approved_appointments.each do |approved_appointment| %>
      <tr>
        <td><%= approved_appointment.lecturer_id %></td>
        <td><%= approved_appointment.student_id %></td>
        <td><%= approved_appointment.appointment_time %></td>
        <td><%= approved_appointment.appointment_date %></td>
        <td><%= approved_appointment.note %></td>
        <td><%= link_to 'Show', approved_appointment %></td>
        <td><%= link_to 'Edit', edit_approved_appointment_path(approved_appointment) %></td>
        <td><%= link_to 'Destroy', approved_appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

